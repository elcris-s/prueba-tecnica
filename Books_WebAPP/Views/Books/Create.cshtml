@model Books_WebAPP.Models.Books

@{
    ViewData["Title"] = "Añadir";
}

<form method="post" asp-action="Create">
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-dark pl-3">Añadir Libro</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="id"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="id" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="title"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="title" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="description"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="description" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="pageCount"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="pageCount" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="excerpt"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="excerpt" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="publishDate"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="publishDate" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <input type="submit" class="btn btn-dark" value="Añadir" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn">Regresar</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
            </div>
        </div>
    </div>

</form>
